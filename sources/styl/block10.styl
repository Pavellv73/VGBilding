.block10
  width 100%
  height auto
  background-color #1f1f1f
  background-image url("img/bg-10.png")
  background-position top right
  background-repeat no-repeat
  background-size auto
  @media (min-width 1280px)
    background-position 71% -2%
    background-size 53%
  @media (min-width 1440px)
    background-position 80% 0
    background-size 53%

  .block10-content
    width 100%
    height auto
    padding-top 30px
    padding-bottom 40px
    flex-direction column
    justify-content center
    align-items center
    @media (min-width 768px)
      padding-top 40px
      padding-bottom 60px
    @media (min-width 1280px)
      padding-top 60px

    .block10-head
      width 100%
      height auto
      margin-bottom 40px
      @media (min-width 768px)
        margin-bottom 60px
      @media (min-width 1280px)
        margin-bottom 80px

      h2
        color #ffffff
        text-align left


    .gifts-block
      width 100%
      height auto
      @media (min-width 768px)
        padding-left 70px
        box-sizing border-box
      @media (min-width 1280px)
        padding-left 147px

      .gift
        width 100%
        height auto
        display flex
        display -webkit-flex
        justify-content flex-start
        align-content flex-start
        flex-direction row
        margin-bottom 18px
        padding-right 18px
        box-sizing border-box
        @media (min-width 1280px)
          margin-bottom 31px


        img
          margin-right 20px
          @media (min-width 1280px)
            margin-right 31px

        p
          color #ffffff
          font-family "Blogger_Sans-ItalicoSans"
          font-size 16px
          font-style italic
          line-height 24px
          @media (min-width 768px)
            font-size 18px
            line-height 24px
            max-width 280px
          @media (min-width 1280px)
            font-size 20px
            max-width 306px

