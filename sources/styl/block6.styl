.block6
  width 100%
  height auto
  background-image url("img/body-bg.png")
  background-repeat repeat

  .block6-content
    width 100%
    height auto
    padding-top 40px
    padding-bottom 40px
    box-sizing border-box
    justify-content center
    align-items center
    flex-direction column
    @media (min-width 768px)
      padding-top 60px
      padding-bottom 60px

    .block6-head
      width 100%
      height auto
      margin-bottom 45px
      @media (min-width 768px)
        margin-bottom 60px

      h2
        color #ffffff
        font-family "GretaDisplayPro"
        font-size 24px
        font-weight 400
        text-align center
        margin-bottom 8px
        br
          display none
        @media (min-width 768px)
          font-size 30px
          font-weight 400
          line-height 32px
          margin-bottom 10px
          br
            display block
        @media (min-width 1280px)
          font-size 34px
          font-weight 400
          line-height 36px
          br
            display none

      p
        color #ffffff
        font-family "Blogger_Sans"
        font-size 16px
        font-weight 400
        text-align center
        @media (min-width 768px)
          font-size 18px
          font-weight 400
        @media(min-width 1280px)
          font-size 20px
          font-weight 400

    .services-block
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-flow row wrap

      .services
        width 50%
        height auto
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        flex-direction column
        margin-bottom 40px
        @media (min-width 768px)
          width 32%
          margin-bottom 60px
        @media (min-width 1280px)
          margin-bottom 90px

        img
          width 55px
          height 57px
          margin-bottom 21px
          @media (min-width 768px)
            width 69px
            height auto
            margin-bottom 15px
          @media (min-width 1280px)
            width 86px
            margin-bottom 28px

        p
          color #bbbbbb
          font-family "Blogger_Sans"
          font-size 14px
          font-style italic
          line-height 20px
          text-align center
          @media (min-width 768px)
            font-size 16px
            line-height 20px
          @media (min-width 1280px)
            font-size 18px
            line-height 20px
