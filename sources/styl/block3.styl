.block3
  width 100%
  height auto
  background-color #1f1f1f
  background-image url("img/body-bg.png")
  background-repeat repeat
  @media (min-width 768px)
    padding-left 0


  .block3-content
    width 100%
    height auto
    padding-top 40px
    padding-bottom 40px
    display flex
    display -webkit-flex
    justify-content center
    align-items center
    flex-direction column
    @media (min-width 1280px)
      padding-top 70px


    .block3-head
      width 100%
      height auto
      margin-bottom 40px
      @media (min-width 768px)
        width 590px
        margin-bottom 60px
      @media (min-width 1280px)
        width 680px
        margin-bottom 80px

      h2
        color #ffffff
        @media (min-width 768px)
          text-align left

      p
        color #ffffff
        font-family "Blogger_Sans"
        font-size 16px
        font-weight 400
        @media (min-width 768px)
          font-size 18px
          font-weight 400
          line-height 20px
        @media (min-width 1280px)
          font-size 20px
          font-weight 400
          line-height 22px

    .works-block
      width 100%
      height auto

      .work-block
        width 100%
        height auto
        margin-bottom 40px
        @media (min-width 768px)
          max-height 490px
          height 490px
          display flex
          display -webkit-flex
          justify-content center
          align-items center
          flex-direction row
          &:nth-of-type(even)
            flex-direction row-reverse
        @media (min-width 1280px)
          justify-content flex-start
          align-items center


        .work-img
          width 100%
          height 200px
          overflow hidden
          margin-bottom 18px
          @media (min-width 768px)
            width 40%
            height auto
            margin-bottom 0

            img
              @media (min-width 768px)
                &:nth-of-type(1)
                  width 309px
                  height 459px
                  @media (min-width 1032px)
                    width 416px
                    height 459px
                &:nth-of-type(2)
                  width 309px
                  height 376px
                  @media (min-width 1032px)
                    width 416px
                    height 459px
                &:nth-of-type(3)
                  width 309px
                  height 437px
                  @media (min-width 1032px)
                    width 416px
                    height 459px

          img
            width 100%
            height auto
            @media (min-width 768px)
              width auto
              height 100%


        .work-text
          width 100%
          height auto
          padding 0 15px
          box-sizing border-box
          @media (min-width 768px)
            width 60%
            padding 0 30px
          @media (min-width 1280px)
            width 50%

          h3
            color #ffffff
            font-family "GretaDisplayPro"
            font-size 21px
            font-weight 400
            text-transform uppercase
            width 100%
            text-align left
            @media (min-width 768px)
              font-size 23px
              font-weight 400
              line-height 25px

          hr
            background: linear-gradient(91deg, rgba(217,178,133,1) 0%, rgba(217,178,133,0.1) 100%); /* w3c */
            margin-bottom 18px
          p
            color #bbbbbb
            font-family "Blogger_Sans"
            font-size 14px
            font-weight 400
            line-height 20px
            text-align left
            margin-bottom 20px
            @media (min-width 768px)
              font-size 16px
              font-weight 400
              line-height 18px


          ul
            margin-bottom 20px
            li
              color #bbbbbb
              font-family "Blogger_Sans"
              font-size 14px
              font-weight 400
              line-height 20px
              text-align left
              @media (min-width 768px)
                font-size 16px
                font-weight 400
                line-height 18px

          a
            color #e3bf95
            font-family "GretaDisplayPro"
            font-size 16px
            font-weight 400
            width 100%
            text-align left
            margin-top 18px
            transition all 0.2s ease
            @media (min-width 1280px)
              font-size 18px
              line-height 20px
            &:hover
              color #ffe6c8
            &:active
              color #c59e70
