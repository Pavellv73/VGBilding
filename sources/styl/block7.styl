.block7
  width 100%
  height auto
  background-color #dddddd
  background-image url("img/bg-7.png")
  background-size 100%
  background-repeat no-repeat
  background-position right bottom

  .block7-content
    width 100%
    height auto
    justify-content center
    align-items center
    flex-direction column
    padding-top 35px
    padding-bottom 40px
    @media (min-width 768px)
      padding-top 44px

    .block7-head
      width 100%
      height auto
      margin-bottom 40px
      @media (min-width 768px)
        margin-bottom 60px
      @media (min-width 1280px)
        margin-bottom 80px

      h2
        color #202020
        font-family "GretaDisplayPro"
        font-size 24px
        font-weight 400
        text-align left
        margin-bottom 8px
        @media (min-width 768px)
          font-size 30px
          font-weight 400
          margin-bottom 10px
        @media (min-width 1280px)
          font-size 34px
          font-weight 400
          line-height 36px

      p
        color #202020
        font-family "Blogger_Sans"
        font-size 16px
        font-weight 400
        line-height 18px
        text-align left
        br
          display none
        @media (min-width 768px)
          font-size 18px
          font-weight 400
          line-height 20px
        @media (min-width 1280px)
          font-size 20px
          font-weight 400
          line-height 24px
          br
            display block

    .steps-block
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      @media (min-width 768px)
        padding-left 80px
        box-sizing border-box
      @media (min-width 1280px)
        padding-left 140px

      .step
        width 100%
        height auto
        display flex
        display -webkit-flex
        justify-content flex-start
        align-items center
        flex-direction row
        margin-bottom 60px
        &:last-child
          span
            &:before
              display none

        &:first-child
          p
            padding-top 0

        span
          width 42px
          height 42px
          border 2px solid #b69977
          background-color transparent
          border-radius 100%
          margin-right 18px
          display flex
          display -webkit-flex
          justify-content center
          align-items center
          font-family "Blogger_Sans"
          position relative
          @media (min-width 768px)
            margin-right 20px
          @media (min-width 1280px)
            margin-right 32px
          &:before
            content " "
            width 0
            height 60px
            border 1px solid #b69977
            position absolute
            top 43px
            left 20px

        p
          max-width 211px
          height 40px
          color #575757
          font-family "Blogger_Sans-Italico"
          font-size 14px
          font-style italic
          line-height 20px
          padding-top 10px
          box-sizing border-box
          @media (min-width 768px)
            font-size 16px
            line-height 20px
            max-width 450px
            width auto
          @media (min-width 1280px)
            font-size 18px
            line-height 20px
            max-width 600px
