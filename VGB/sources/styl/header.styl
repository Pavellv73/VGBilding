header
  width 100%
  height auto
  box-shadow 0 0 10px rgba(0, 0, 0, 0.3)
  background-color #1d1d1d
  background-image url("img/body-bg.png")
  background-repeat repeat
  position relative
  box-sizing border-box
  padding 0 12px
  z-index 800
  @media (min-width 768px)
    width 200px
    height 100vh
    position fixed
    top 0
    right 0
  @media (min-width 1280px)
    width 200px
    height 100vh
    position fixed
    top 0
    right 0

  .header-content
    width 100%
    height auto
    padding-top 8px
    padding-bottom 8px
    box-sizing border-box
    display flex
    display -webkit-flex
    justify-content space-between
    align-items center
    @media (min-width 768px)
      flex-direction column
      padding-top 40px
      padding-bottom 0

    .logo-block
      width 126px
      height 32px
      background-image url("img/logo.svg")
      background-size 100%
      background-repeat no-repeat
      background-position center center
      @media (min-width 768px)
        width 142px
        height 132px
        background-image url("img/big-logo.svg")
        background-size 100%
        background-repeat no-repeat
        background-position center center

    .menu-hamburger
      position relative
      @media (min-width 1280px)
        width 80%

      .block-menu
        width auto
        height auto
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        flex-direction row
        @media (min-width 1280px)
          display none

        .burger
          width 22px
          height 16px
          cursor pointer
          display flex
          display -webkit-flex
          justify-content center
          align-items flex-end
          flex-direction column
          @media (min-width 768px)
            display none

          .block1, .block3
            width 20px
            height 2px
            background-color #e3bf95
            transition all 0.5s

          .block2
            width 20px
            height 2px
            background-color #e3bf95
            margin 5px 0
            transition all 0.5s

          .block1-click
            transform rotate(45deg)
            transition all 0.5s
          .block2-click
            display none
            overflow hidden
            transition all 0.5s
          .block3-click
            transform rotate(-45deg)
            transition all 0.5s

    .habmenu
      display none
      width 100%
      height 100vh
      box-shadow 0 0 20px rgba(0, 0, 0, 0.3)
      background-color #1d1d1d
      padding-top 40px
      padding-bottom 76px
      box-sizing border-box
      position absolute
      top 47px
      left 0
      z-index 1
      @media (min-width 768px)
        display block
        position relative
        box-shadow none
        height auto
        padding-bottom 0
        padding-top 30px

      .hab-content
        width 100%
        height auto
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        flex-direction column
        @media (min-width 768px)
          justify-content flex-start
          align-items flex-start
          padding-left 15px

        div
          width auto
          height auto
          margin-bottom 32px
          @media (min-width 768px)
            width 100%
          @media (min-width 1280px)
            margin-bottom 28px


          a
            color #e3bf95
            font-family "GretaDisplayPro"
            font-size 16px
            font-weight 400
            text-align center
            transition all 0.2s ease
            @media (min-width 768px)
              text-align left
            @media (min-width 1280px)
              font-size 18px
              font-weight 400

            &:hover
              color #e3bf95
              border-bottom 1px dashed #e3bf95
            &:active
              color #c59e70
              border-bottom 1px dashed #e3bf95


        .hab-contact
          width 100%
          height auto
          display flex
          display -webkit-flex
          justify-content center
          align-items center
          flex-direction column
          @media (min-width 768px)
            justify-content flex-start
            align-items flex-start
            margin-top 100px
          @media (min-width 1280px)
            margin-top 60px

          a
            color #c6c6c6
            font-family "GretaDisplayPro"
            font-size 19px
            font-weight 400
            text-transform uppercase
            margin-bottom 12px
            transition all 0.2s ease
            text-align center
            &:hover
              color #ffffff
              border none
            &:active
              color rgba(255, 255, 255, 0.75)

          .but-link
            width 142px
            height auto
            border-radius 94px
            border 1px solid #d9b285
            padding 4px
            box-sizing border-box
            color #e3bf95
            font-family "Blogger_Sans-Italico"
            font-size 9px
            font-weight 500
            text-transform uppercase
            letter-spacing 0.45px
            transition all 0.2s ease
            @media (min-width 1280px)
              font-size 10px
            &:hover
              color #e3bf95
              border 1px solid #e3bf95
            &:active
              color #c59e70
              border 1px solid #c59e70

