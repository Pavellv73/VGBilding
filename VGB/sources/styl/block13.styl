.block13
  width 100%
  height auto
  background-color #181818
  background-image url("img/map.png")
  background-size auto
  background-position bottom right
  background-repeat no-repeat
  @media (min-width 1280px)
    background-position 67% 50%
  @media (min-width 1440px)
    background-position 80% 50%
  .block13-content
    width 100%
    height auto
    flex-direction column
    justify-content center
    align-items center
    padding-top 45px
    padding-bottom 40px

    .block13-head
      width 100%
      height auto
      margin-bottom 40px
      @media (min-width 768px)
        margin-bottom 60px

      h2
        color #ffffff
        font-family "GretaDisplayPro"
        font-size 24px
        font-weight 400
        text-align left
        @media (min-width 768px)
          font-size 30px
          font-weight 400
        @media (min-width 1280px)
          font-size 34px
          font-weight 400

    .contacts-block
      width 100%
      height auto

      .time, .phone, .mail, .inn
        width auto
        height auto
        margin-bottom 18px
        @media (min-width 768px)
          margin-bottom 20px
        @media (min-width 1280px)
          margin-bottom 24px

        span
          color #929292
          font-family "Blogger_Sans"
          font-size 14px
          font-weight 400
          line-height 20px
          @media (min-width 768px)
            font-size 16px
            font-weight 400
            line-height 20px
            margin-bottom 10px
          @media (min-width 1280px)
            font-size 18px
            font-weight 400
            line-height 20px
        p
          color rgba(255, 255, 255, 0.75)
          font-family "GretaDisplayPro"
          font-size 17px
          font-weight 400
          @media (min-width 768px)
            font-size 19px
            font-weight 400
          @media (min-width 1280px)
            font-size 21px
            font-weight 400
            line-height 22px
        a
          color #e3bf95
          font-family "GretaDisplayPro"
          font-size 17px
          font-weight 400
          transition all 0.2s ease
          @media (min-width 768px)
            font-size 19px
            font-weight 400
          @media (min-width 1280px)
            font-size 21px
            font-weight 400
            line-height 20px
          &:hover
            color #c59e70
          &:active
            color #ffffff
